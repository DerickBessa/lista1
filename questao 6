#include <stdio.h>
int main(void){
    int hours, minutes, seconds;
    printf("quantas horas deseja converter?");
    scanf("%d", &hours);
    printf("quantas minutos deseja converter?");
    scanf("%d", &minutes);
    printf("quantos segundos deseja?");
    scanf("%d", &seconds);
    printf("isso da um total de %d segundos",(seconds) + (hours*60) +(hours*3600));
    return 0;
}
